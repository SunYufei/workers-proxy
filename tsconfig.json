{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "lib": [
      "ES6",
      "WebWorker"
    ],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./src/*.ts"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}